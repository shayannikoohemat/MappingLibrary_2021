# Project: linex
# Makefile created by Dev-C++ 4.9.9.2

GCCDIR = /usr/local/gcc342
CPP  = $(GCCDIR)/bin/g++
CC  = $(GCCDIR)/bin/gcc
WINDRES = windres.exe
RES  = 
OBJ  = main.o llinex.o linegrow.o foerstner.o burns_replacement.o $(RES)
LINKOBJ  = main.o llinex.o linegrow.o foerstner.o burns_replacement.o $(RES)
LIBLINKOBJ = llinex.o linegrow.o foerstner.o burns_replacement.o
LIBS = -L$(GCCDIR)/lib  -L"lib" -L/home/gerke/opencv2/lib -lhighgui -lcv -lcxcore -lcvaux -L"../../../Library/lib" -lPhotogrammetry_lx -lLaserScan_lx  -lNR_lx -lEispack_lx -lLinpack_lx -lANN_lx -lnewmat_lx -lg2c   -g3 
INCS = -I$(GCCDIR)/include -I/home/gerke/opencv2/include/opencv -I"../../../Library/LaserScan/include"  -I"../../../Library/Photogrammetry/include"  -I"../../../Foreign/NR/utils" -I/home/gerke/opencv2/include/opencv 
CXXINCS =  -I$(GCCDIR)/include -I/home/gerke/opencv2/include/opencv -I"../../../Library/LaserScan/include"  -I"../../../Library/Photogrammetry/include"  -I"../../../Foreign/NR/utils" -I/home/gerke/opencv2/include/opencv 
BIN  = ../../bin/linex_lx
ARCHIVE  = ../../../Library/lib/liblinex_lx.a
CXXFLAGS = $(CXXINCS)   -g3
CFLAGS = $(INCS)   -g3
RM = rm -f

.PHONY: all all-before all-after clean clean-custom

all: all-before ../../bin/linex_lx $(ARCHIVE) all-after


clean: clean-custom
	${RM} $(OBJ) $(BIN) $(ARCHIVE)

$(BIN): $(OBJ)
	$(CPP) $(LINKOBJ) -o "../../bin/linex_lx" $(LIBS)

$(ARCHIVE): $(LIBLINKOBJ)
	ar r $(ARCHIVE) $(LIBLINKOBJ)
	ranlib $(ARCHIVE)

main.o: main.cpp
	$(CPP) -c main.cpp -o main.o $(CXXFLAGS)

llinex.o: llinex.c
	$(CC) -c llinex.c -o llinex.o $(CFLAGS)

foerstner.o: foerstner.c
	$(CC) -c foerstner.c -o foerstner.o $(CFLAGS)

linegrow.o: linegrow.c
	$(CC) -c linegrow.c -o linegrow.o $(CFLAGS)

burns_replacement.o: burns_replacement.c
	$(CPP) -c burns_replacement.c -o burns_replacement.o $(CFLAGS)

