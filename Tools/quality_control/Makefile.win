	$(MAKE) -C imageoffsets -f Makefile_imageoffsets.win clean
	$(MAKE) -C roofcheck -f Makefile_roofcheck.win clean
	$(MAKE) -C rooftiles -f Makefile_rooftiles.win clean
	$(MAKE) -C roofverify -f Makefile_roofverify.win clean
	$(MAKE) -C stripcheck -f Makefile_stripcheck.win clean
	$(MAKE) -C stripoffsets -f Makefile_stripoffsets.win clean
	$(MAKE) -C verifyroads -f Makefile_verifyroads.win clean
