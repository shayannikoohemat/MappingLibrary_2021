all:
	$(MAKE) -C imageoffsets -f Makefile_imageoffsets.win
	$(MAKE) -C roofcheck -f Makefile_roofcheck.win
	$(MAKE) -C rooftiles -f Makefile_rooftiles.win
	$(MAKE) -C roofverify -f Makefile_roofverify.win
	$(MAKE) -C stripcheck -f Makefile_stripcheck.win
	$(MAKE) -C stripoffsets -f Makefile_stripoffsets.win
